<h1>Create Job Post</h1>

<% if @job.errors.any? %>
<ul>
    <% @job.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
    <% end %>
</ul>
<% end %>

<%= form_with(model: @job, url: jobs_path, method: :post) do |f| %>
    <div class="form-group mt-3">
    <%= f.label :title %>
    <%= f.text_field :title, autofocus: true, placeholder: 'Web Developer', class: "form-control" %>
    </div>

    <div class="form-group mt-3">
    <%= f.label :description %>
    <%= f.text_area :description, class: "form-control" %>
    </div>

    <div class="form-group mt-3">
    <%= f.label :company %>
    <%= f.text_field :company, placeholder: 'abc', class: "form-control" %>
    </div>

    <div class="form-group mt-3">
    <%= f.label :location %>
    <%= f.text_field :location, placeholder: 'Vancouver', class: "form-control" %>
    </div>

    <div class="form-group mt-3">
    <%= f.label :job_type %>
    <%= f.select :job_type, ['Full-Time', 'Part-Time', 'Contract', 'Internship/Co-op'], { prompt: 'Select Job Type' }, class: "form-control" %>
    </div>

    <%= f.submit class: "btn btn-primary w-100 mt-3" %>
<% end %>