<h1>Edit User</h1>

<% if @user.errors.any? %>
  <ul>
    <% @user.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>

<%= form_for @user do |f| %>
    <div class="form-group mt-3">
    <%= f.label :first_name %>
    <%= f.text_field :first_name, class: "form-control" %>
    </div>
    <div class="form-group mt-3">
    <%= f.label :last_name %>
    <%= f.text_field :last_name, class: "form-control" %>
    </div>
    <div class="form-group mt-3">
    <%= f.label :email %>
    <%= f.email_field :email, class: "form-control" %>
    </div>
    <div class="form-group mt-3">
    <%= f.label :resume %>
    <%= f.file_field :resume, class: "form-control" %>
    </div>
    <div class="form-group mt-3">
    <%= f.label :is_recruiter, "Are you a recruiter?" %>
    <%= f.check_box :is_recruiter %>
    </div>
    <%= f.submit class: "btn btn-primary mt-3 w-100" %>
<% end %>




<div class="mt-3">
  <%= link_to "Change Password ->", change_password_user_path %>
</div>

<div class="mt-3">
<%= link_to 'Delete User', user_path(@user), method: :delete, data: { confirm: 'Are you sure you want to delete this user?' }, class: 'btn btn-danger' %>
</div>