<h1>Sign Up</h1>

<% if @user.errors.any? %>
<ul>
    <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
    <% end %>
</ul>
<% end %>

<%= form_for @user do |f| %>
    <div class="form-group mt-3">
    <%= f.label :first_name %>
    <%= f.text_field :first_name, autofocus: true, placeholder: 'John', class: "form-control" %>
    </div>

    <div class="form-group mt-3">
    <%= f.label :last_name %>
    <%= f.text_field :last_name, placeholder: 'Doe', class: "form-control" %>
    </div>

    <div class="form-group mt-3">
    <%= f.label :email %>
    <%= f.email_field :email, placeholder: 'jon@doe.com', class: "form-control" %>
    </div>

    <div class="form-group mt-3">
    <%= f.label :password %>
    <%= f.password_field :password, class: "form-control" %>
    </div>

    <div class="form-group mt-3">
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation, class: "form-control" %>
    </div>

    <div class="form-group mt-3">
    <%= f.label :resume, "Resume (Optional)" %>
    <%= f.file_field :resume, class: "form-control" %>
    </div>

    <div class="form-group mt-3">
    <%= f.label :is_recruiter, "Are you a recruiter?" %>
    <%= f.check_box :is_recruiter %>
    </div>

    <%= f.submit class: "btn btn-primary w-100 mt-3" %>
<% end %>