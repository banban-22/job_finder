<h1>Log In</h1>
    <%= form_tag sessions_path do %>
      <div class="form-group">
        <%= label_tag :email  %>
        <%= email_field_tag :email, nil, autofocus: true, class: "form-control" %>
      </div>

      <div class="form-group mt-3">
        <%= label_tag :password %>
        <%= password_field_tag :password, nil, class: "form-control" %>
      </div>

      <div>
        <%= submit_tag "Log In", class: "btn btn-outline-primary mt-3" %>
      </div>
    <% end %>