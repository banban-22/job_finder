    <%= form_with(url: jobs_path, method: :get, class: "row g-3") do |form| %>
        <%= form.text_field :q, value: @q, placeholder: "Search By Title", class: "col-auto form-control w-75" %>
        <%= form.submit "Search!", class: "col-auto btn btn-outline-primary search-btn" %>
    <% end %>
    
    <div class="row">
        <% @jobs.each do |job| %>
            <div class="col-md-6">
                <div class="card m-3 border-dark">
                    <div class="card-body">
                        <h5 class="card-title">
                        <%= link_to job.title, job_path(job) %>
                        </h5>
                        <p class="card-text">
                        <%= job.description.truncate(40) %>
                        </p>
                    </div>
                </div>
            </div>
        <% end %>
    </div>